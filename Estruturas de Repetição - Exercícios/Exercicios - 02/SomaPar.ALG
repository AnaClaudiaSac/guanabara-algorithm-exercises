Algoritmo "somaPar"

Var
   Contador,SomaPar, Num: inteiro
Inicio
   //Faça um programa que calcule a soma dos números de 1 até 100.
   Contador <- 0
   SomaPar <- 0

   Para Contador de 1 ate 100  faca
      Contador <- Contador + 0
      SomaPar <- SomaPar + Contador
      Escreval(Contador)
   FimPara
   Escreval("A soma dos números de 1 até 100 é: ", SomaPar)

Fimalgoritmo